<h1>My orders</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Order ID -<small>{{_id}}</small>
                        </span>
                        <p class="date">Date: {{date}}</p>
                        <p><em>{{user.userID.name}}</em> ({{user.userID.email}})</p>
                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}} (x <strong>{{count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Price: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Orders empty!</p>
{{/if}}
