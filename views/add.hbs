<h1>Add new course</h1>

{{#if error}}
    <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="post" novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Please write name!"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}" >
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Please write price!"></span>
    </div>
    <div class="input-field">
        <input id="image" name="image" type="text" class="validate" required value="{{data.image}}">
        <label for="image">Course image</label>
        <span class="helper-text" data-error="Please enter image url!"></span>
    </div>
    <div class="input-field">
        <textarea id="description" name="description"class="materialize-textarea"></textarea>
        <label for="description">Course description</label>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn btn-primary">Add Course</button>
</form>
